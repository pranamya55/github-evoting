{
	"name": "voter-portal-step-cast",
	"$schema": "../../../node_modules/nx/schemas/project-schema.json",
	"sourceRoot": "libs/voter-portal/step-cast/src",
	"prefix": "vp",
	"projectType": "library",
	"tags": ["scope:voter-portal","type:step"],
	"targets": {
		"test": {
			"executor": "@nx/jest:jest",
			"outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
			"options": {
				"jestConfig": "libs/voter-portal/step-cast/jest.config.ts",
				"passWithNoTests": true
			},
			"configurations": {
				"ci": {
					"ci": true,
					"codeCoverage": true
				}
			}
		},
		"lint": {
			"executor": "@nx/eslint:lint",
			"outputs": ["{options.outputFile}"],
			"options": {
				"lintFilePatterns": [
					"libs/voter-portal/step-cast/**/*.ts",
					"libs/voter-portal/step-cast/**/*.html"
				]
			}
		}
	}
}
